{
  "env": {
    "browser": true,
    "node": true,
    "es2020": true,
    "googleappsscript/googleappsscript": true
  },
  "extends": ["./node_modules/gts", "prettier"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": [
      "googleappsscript"
    ],
  "rules": {
    "prettier/prettier": "error"
  },
  "ignorePatterns": ["template/**/*", "template-ui/**/*"]
}
